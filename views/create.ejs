        crossorigin="anonymous" />
    <title>PokeNavi | Creation</title>
    <link rel="shortcut icon" type="image/png"
        href="https://raw.githubusercontent.com/PokeAPI/sprites/fe9b71b303647573cd61f92d9a43fd32a47d9c7d/sprites/items/poke-radar.png">
    <link rel="icon" type="image/png" sizes="32x32"
        href="https://raw.githubusercontent.com/PokeAPI/sprites/fe9b71b303647573cd61f92d9a43fd32a47d9c7d/sprites/items/poke-radar.png">
    <link rel="icon" type="image/png" sizes="16x16"
        href="https://raw.githubusercontent.com/PokeAPI/sprites/fe9b71b303647573cd61f92d9a43fd32a47d9c7d/sprites/items/poke-radar.png">
    <link rel="manifest" href="manifest.json">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=DynaPuff">

    <style>

    </style>
    <title>PokeNavi | Creation</title>
</head>

<body>
    <h1>Pokemon Creation</h1>
    <form id="trainer-pokemon-form">
        <fieldset>
            <legend>Trainer Information</legend>
            <label for="trainer-name">Trainer Name:</label>
            <input type="text" id="trainer-name" name="trainer-name" required><br><br>

            <label for="trainer-gender">Trainer Gender:</label>
            <input type="text" id="trainer-gender" name="trainer-gender" required><br><br>

            <label for="trainer-age">Trainer Age:</label>
            <input type="number" id="trainer-age" name="trainer-age" required><br><br>
        </fieldset>

        <fieldset>
            <legend>Pokemon Information</legend>
            <label for="pokemon-name">Pokemon Name:</label>
            <input type="text" id="pokemon-name" name="pokemon-name" required><br><br>

            <label for="pokemon-gender">Pokemon Gender:</label>
            <select id="pokemon-gender" name="pokemon-gender" required>
                <option value="">--Please choose an option--</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="genderless">Genderless</option>
            </select><br><br>

            <label for="pokemon-species">Pokemon Species:</label>
            <select id="pokemon-species" name="pokemon-species" required>
              <option value="">--Please choose an option--</option>
              <% for (let i = 0; i < speciesNames.length; i++) { %>
                <option value="<%= speciesNames[i] %>"><%= (speciesNames[i]) %></option>
              <% } %>
            </select><br><br>

            <label for="pokemon-traits">Pokemon Traits:</label>
            <select id="pokemon-traits" name="pokemon-traits" required>
              <option value="">--Please choose an option--</option>
              <% for (let i = 0; i < natureNames.length; i++) { %>
                <option value="<%= natureNames[i] %>"><%= (natureNames[i]) %></option>
              <% } %>
            </select><br><br>

            <label for="pokemon-age">Pokemon Age:</label>
            <input type="number" id="pokemon-age" name="pokemon-age" required><br><br>

            <label for="pokemon-hobby">Pokemon Hobby:</label>
            <input id="pokemon-hobby" name="pokemon-hobby" required>
            </select><br><br>
        </fieldset>

        <button type="submit">Submit</button>

    </form>
    <button id="return" type="return">Return</button>

    <script>
        document.getElementById('trainer-pokemon-form').addEventListener('submit', function (event) {
            event.preventDefault();

            const formData = new FormData(event.target);
            const data = {
                trainer: {
                    name: formData.get('trainer-name'),
                    gender: formData.get('trainer-gender'),
                    age: formData.get('trainer-age')
                },
                pokemon: {
                    name: formData.get('pokemon-name'),
                    species: formData.get('pokemon-species'),
                    gender: formData.get('pokemon-gender'),
                    traits: Array.from(formData.getAll('pokemon-traits')),
                    age: formData.get('pokemon-age'),
                    hobby: formData.get('pokemon-hobby')
                }
            };

            const jsonData = JSON.stringify(data);

            // Send the JSON data to the server
            fetch('/api/submit-data', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: jsonData
            }).then(response => {
                if (response.ok) {
                    return response.json();
                } else {
                    throw new Error('Something went wrong');
                }
            }).then(data => {
                console.log('Success:', data);
                alert('Data submitted successfully');
            }).catch(error => {
                console.error('Error:', error);
                alert('Error submitting data');
            });
        });

        document.getElementById('return').addEventListener('click', function () {
            window.location.href = "/";
        });

    </script>
</body>

</html>